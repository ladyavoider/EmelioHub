    end
end)

local transparencyLabel = Instance.new("TextLabel")
transparencyLabel.Size = UDim2.new(0, 100, 0, 30)
transparencyLabel.Position = UDim2.new(0, 0, 0, 290)
transparencyLabel.BackgroundTransparency = 1
transparencyLabel.Text = "Transparency: "
transparencyLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
transparencyLabel.TextSize = 14
transparencyLabel.Font = Enum.Font.SourceSans
transparencyLabel.TextXAlignment = Enum.TextXAlignment.Left
transparencyLabel.Parent = mainTab

local transparencySlider = Instance.new("Frame")
transparencySlider.Size = UDim2.new(0, 100, 0, 20)
transparencySlider.Position = UDim2.new(0, 100, 0, 295)
transparencySlider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

local transparencySliderCorner = Instance.new("UICorner")
transparencySliderCorner.CornerRadius = UDim.new(0, 5)
transparencySliderCorner.Parent = transparencySlider

local transparencySliderStroke = Instance.new("UIStroke")
transparencySliderStroke.Color = Color3.fromRGB(100, 100, 100)
transparencySliderStroke.Thickness = 1
transparencySliderStroke.Parent = transparencySlider

local transparencySliderButton = Instance.new("TextButton")
transparencySliderButton.Size = UDim2.new(0, 10, 1, 0)
transparencySliderButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
transparencySliderButton.Text = ""
transparencySliderButton.Parent = transparencySlider

local transparencySliderButtonCorner = Instance.new("UICorner")
transparencySliderButtonCorner.CornerRadius = UDim.new(0, 5)
transparencySliderButtonCorner.Parent = transparencySliderButton

transparencySlider.Parent = mainTab

local draggingTransparency = false
transparencySliderButton.MouseButton1Down:Connect(function()
    draggingTransparency = true
end)

transparencySliderButton.MouseButton1Up:Connect(function()
    draggingTransparency = false
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if draggingTransparency and input.UserInputType == Enum.UserInputType.MouseMovement then
        local pos = input.Position.X - transparencySlider.AbsolutePosition.X
        local sliderSize = transparencySlider.AbsoluteSize.X
        pos = math.clamp(pos, 0, sliderSize)
        
        local percent = pos / sliderSize
        hitboxTransparency = percent
        transparencySliderButton.Position = UDim2.new(percent, -5, 0, 0)
        
        if hitboxEnabled then
            for _, esp in pairs(espObjects) do
                esp.box.Transparency = hitboxTransparency
            end
        end
    end
end)

local windowCorner = Instance.new("UICorner")
windowCorner.CornerRadius = UDim.new(0, 8)
windowCorner.Parent = windowFrame

local windowStroke = Instance.new("UIStroke")
windowStroke.Color = Color3.fromRGB(60, 60, 60)
windowStroke.Thickness = 2
windowStroke.Parent = windowFrame

tabs["Main"].button.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
tabs["Main"].content.Visible = true
currentTab = "Main"

game.Players.PlayerAdded:Connect(function(player)
    if espEnabled then
        createESP(player)
    end
end)

game.Players.PlayerRemoving:Connect(function(player)
    removeESP(player)
end)

game:GetService("RunService").RenderStepped:Connect(function()
    if espEnabled then
        updateESP()
    end
end)

for _, player in ipairs(game.Players:GetPlayers()) do
    createESP(player)
end
