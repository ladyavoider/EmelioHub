local hitboxXSlider = Instance.new("Frame")
hitboxXSlider.Size = UDim2.new(0, 100, 0, 20)
hitboxXSlider.Position = UDim2.new(0, 100, 0, 205)
hitboxXSlider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

local hitboxXSliderCorner = Instance.new("UICorner")
hitboxXSliderCorner.CornerRadius = UDim.new(0, 5)
hitboxXSliderCorner.Parent = hitboxXSlider

local hitboxXSliderStroke = Instance.new("UIStroke")
hitboxXSliderStroke.Color = Color3.fromRGB(100, 100, 100)
hitboxXSliderStroke.Thickness = 1
hitboxXSliderStroke.Parent = hitboxXSlider

local hitboxXSliderButton = Instance.new("TextButton")
hitboxXSliderButton.Size = UDim2.new(0, 10, 1, 0)
hitboxXSliderButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
hitboxXSliderButton.Text = ""
hitboxXSliderButton.Parent = hitboxXSlider

local hitboxXSliderButtonCorner = Instance.new("UICorner")
hitboxXSliderButtonCorner.CornerRadius = UDim.new(0, 5)
hitboxXSliderButtonCorner.Parent = hitboxXSliderButton

hitboxXSlider.Parent = mainTab

local draggingX = false
hitboxXSliderButton.MouseButton1Down:Connect(function()
    draggingX = true
end)

hitboxXSliderButton.MouseButton1Up:Connect(function()
    draggingX = false
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if draggingX and input.UserInputType == Enum.UserInputType.MouseMovement then
        local pos = input.Position.X - hitboxXSlider.AbsolutePosition.X
        local sliderSize = hitboxXSlider.AbsoluteSize.X
        pos = math.clamp(pos, 0, sliderSize)
        
        local percent = pos / sliderSize
        hitboxSize = Vector3.new(math.floor(percent * 10) + 1, hitboxSize.Y, hitboxSize.Z)
        hitboxXSliderButton.Position = UDim2.new(percent, -5, 0, 0)
        
        if hitboxEnabled then
            for _, esp in pairs(espObjects) do
                esp.box.Size = hitboxSize
            end
        end
    end
end)

