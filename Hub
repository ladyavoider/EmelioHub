hitboxXLabel.TextXAlignment = Enum.TextXAlignment.Left
hitboxXLabel.Parent = mainTab

local hitboxXInput = Instance.new("TextBox")
hitboxXInput.Size = UDim2.new(0,     80,     0,     30)
hitboxXInput.Position = UDim2.new(0,     350,     0,     0)
hitboxXInput.BackgroundColor3 = Color3.fromRGB(60,     60,     60)
hitboxXInput.Text = tostring(hitboxSize.X)
hitboxXInput.TextColor3 = Color3.fromRGB(255,     255,     255)
hitboxXInput.TextSize = 14
hitboxXInput.Font = Enum.Font.SourceSans
hitboxXInput.PlaceholderText = "Enter X size"

local hitboxXCorner = Instance.new("UICorner")
hitboxXCorner.CornerRadius = UDim.new(0,     5)
hitboxXCorner.Parent = hitboxXInput

local hitboxXStroke = Instance.new("UIStroke")
hitboxXStroke.Color = Color3.fromRGB(100,     100,     100)
hitboxXStroke.Thickness = 1
hitboxXStroke.Parent = hitboxXInput

hitboxXInput.Parent = mainTab

hitboxXInput.FocusLost:   Connect(function()
    local value = tonumber(hitboxXInput.Text)
    if value then
        hitboxSize = Vector3.new(value,     hitboxSize.Y,     hitboxSize.Z)
        if hitboxEnabled then
            for _,     esp in pairs(espObjects) do
                esp.box.Size = hitboxSize
            end
        end
    else
        hitboxXInput.Text = tostring(hitboxSize.X)
    end
end)

