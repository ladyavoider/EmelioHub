aimbotSmoothInput.TextColor3 = Color3.fromRGB(255,     255,     255)
aimbotSmoothInput.TextSize = 14
aimbotSmoothInput.Font = Enum.Font.SourceSans
aimbotSmoothInput.PlaceholderText = "0.0 - 1.0"

local aimbotSmoothCorner = Instance.new("UICorner")
aimbotSmoothCorner.CornerRadius = UDim.new(0,     5)
aimbotSmoothCorner.Parent = aimbotSmoothInput

local aimbotSmoothStroke = Instance.new("UIStroke")
aimbotSmoothStroke.Color = Color3.fromRGB(100,     100,     100)
aimbotSmoothStroke.Thickness = 1
aimbotSmoothStroke.Parent = aimbotSmoothInput

aimbotSmoothInput.Parent = mainTab

aimbotSmoothInput.FocusLost:   Connect(function()
    local value = tonumber(aimbotSmoothInput.Text)
    if value and value >= 0 and value <= 1 then
        aimbotSmoothness = value
    else
        aimbotSmoothInput.Text = tostring(aimbotSmoothness)
    end
end)

